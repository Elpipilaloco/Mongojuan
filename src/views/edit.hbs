<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body p-4 text-white">
                <h3>Actualiza una tarea</h3>
                <form action="/tasks/{{task._id}}/edit" method="post">
                    <input class="form-control bg-light text-white mb-2" type="text" name="title" placeholder="Tile"
                        value="{{task.title}}">

                    <textarea class="form-control bg-light text-white" name="description"
                        placeholder="Pon la descripcion">{{task.description}}</textarea>

                    <button class="btn btn-success mt-2">Actualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>